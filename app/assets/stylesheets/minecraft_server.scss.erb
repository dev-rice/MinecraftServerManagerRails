// Place all the styles related to the minecraft_server controller here.
// They will automatically be included in application.css.
// You can use Sass (SCSS) here: http://sass-lang.com/
body {
    background: #112 url(<%= asset_path 'bg_main.png' %>);
    margin: 0;
    padding: 0;
}
#content_wrapper {
    height: 100%;
    width: 100%;
}
h1 {
    margin-top: 0px;
}

$controller_padding: 20px;
$controller_border_radius: 5px;
#controller_wrapper {
    display: block;
    margin: auto;
    border-top: 100px;
    // background: rgb(219, 219, 219) url(<%= asset_path 'stone.png' %>);
    background: rgb(219, 219, 219);
    padding: $controller_padding;
    border-radius: $controller_border_radius;
    width: 500px;
    height: 300px;
    position: relative;
    top: 100px;
}

#controller_title_div {
    background-color: rgb(181, 181, 181);
    margin: -$controller_padding;
    margin-bottom: 0px;

    padding: 20px;
    padding-top: 15px;
    padding-bottom: 0px;

    border-top-left-radius: $controller_border_radius;
    border-top-right-radius: $controller_border_radius;
    border-bottom: solid 1px rgb(177, 177, 177);
}


#pseudo_form_div {
    display: block;
    margin: auto;
    width: 300px;

}

.controller_view {
    width: 200px;
    display: none;
    padding-top: 20px;
    // margin: auto;
}
