body {
    background: #112 url(<%= asset_path 'bg_main.png' %>);
    margin: 0;
    padding: 0;
}
#content_wrapper {
    height: 100%;
    width: 100%;
}
h1 {
    margin-top: 0px;
}
#controller_wrapper {
    display: block;
    margin: auto;
    border-top: 100px;
    // background: rgb(219, 219, 219) url(<%= asset_path 'stone.png' %>);
    background: rgb(219, 219, 219);
    padding: 20px;
    width: 40%;
    height: 500px;
    position: relative;
    top: 100px;
}

#pseudo_form_div {
    display: block;
    margin: auto;
    width: 300px;

}

.controller_view {
    width: 200px;
    display: none;
}
